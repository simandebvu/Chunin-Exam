<%= form_with model: [:app, Website.new], id: id, data: { remote: true, controller: "form-error" ,
    action: "ajax:error->form-error#onError" } do |form| %>
    <div class="form-group mt-0 form-inline">
        <div class="form-group-header">
            <%= form.label :site_original_link, "Website URL" %>
        </div>
        <div class="form-group-body">
            <%= form.url_field :site_original_link, class: "form-control width-full" ,
                placeholder: "https://example.com" , autocomplete: "off" %>
                <%= render "layouts/partials/form_error" , error_field: "site_original_link" %>
        </div>
    </div>
    <%= form.submit "Shorten it" , class: "btn btn-primary btn-block" %>
        <% end %>

